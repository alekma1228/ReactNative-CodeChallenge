{
  "extends": "tslint-config-standard",
  "jsRules": {
    "curly": true
  },
  "rules": {
    "curly": true,
    "indent": [true, "spaces"],
    "no-unused-variable": false,
    "no-use-before-declare": false,
    "prefer-const": true,
    "semicolon": [true, "never", "ignore-bound-class-methods"],
    "trailing-comma": false
  },
  "rulesDirectory": []
}
